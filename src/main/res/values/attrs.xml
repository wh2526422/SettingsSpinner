<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SettingsSpinner">
        <!--   控件宽度     -->
        <attr name="android:width" />
        <!--   控件高度     -->
        <attr name="android:height" />
        <!--   控件标题颜色     -->
        <attr name="android:textColor" />
        <!--   控件标题字体大小     -->
        <attr name="android:textSize" />
        <!--   控件背景     -->
        <attr name="android:background" />
        <!--   控件下来列表数据    -->
        <attr name="android:entries" />
        <!--   是否可交互     -->
        <attr name="android:enabled"/>
        <!--   弹框高度     -->
        <attr name="popupWindowHeight" format="dimension" />
        <!--   右侧图标     -->
        <attr name="arrowDrawable" format="integer"/>
        <!--   右侧图标颜色    -->
        <attr name="arrowColor" format="color" />
        <!--   整个列表背景     -->
        <attr name="listBackground" format="reference|color"/>
        <!--  单个条目的背景。字体颜色和字体大小      -->
        <attr name="itemBackground" />
        <attr name="itemTextColor" format="color"/>
        <attr name="itemTextSize" format="dimension"/>
    </declare-styleable>
</resources>